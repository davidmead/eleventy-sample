---
layout: layouts/layout-page


pagination:
  data: collections
  size: 1
  reverse: true
  alias: tag
permalink: /tags/{{ tag }}/

---
<h1 class="title txt-center">Everything tagged<br><span class="p-category"><i class="la la-tag"></i> {{ tag }} </span></h1>

<dl class="wrapper-taglist">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <dt><time  style="" datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time></dt>
  <dd><a href="{{ post.url | url }}">{{ post.data.title }}</a></dd>
{% endfor %}
</dl>