---
layout: layouts/layout-base.njk

---
<main>
	<article class="h-entry">
		<h1 class="p-name">{{ title }}</h1>
		<!-- Excerpt Start -->
		<p class="p-summary">{{ summary }}</p>
		<!-- Excerpt End -->
		<div class="e-content">
			{{ content | safe }}
		</div>
		<footer class="meta">
			<h2>Meta</h2>
			<p>Originally posted on <time class="dt-published" datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>.</p>
			<p>Tagged:
				{% for item in tags %}
				<span>
                    <a class="p-category" href="/tags/{{ item }}" title="all posts tagged {{ item }}" rel="tag"><i class="la la-tag"></i> {{ item }}</a>
                 </span>
                {% endfor %}
			 </p>
			<p>Link to, or bookmark, here using this <a href="{{ post.url | url }}" title="">permalink</a>.
<!-- 		<p>Syndicated to <a class="u-syndication" href="" title="syndicated content" rel="syndication"></a>.</p> -->
		</footer>
	</article>
</main>